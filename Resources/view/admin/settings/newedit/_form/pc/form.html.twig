{% trans_default_domain 'products-review.admin' %}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">{{ 'page.settings.categories'|trans }}</h3>
            </div>
            <div class="card-body">
                <div class="collection-category" data-prototype="{{ form_widget(form.category.vars.prototype)|e('html_attr') }}">
                    {% for category in form.category %}
                        <div class="collection-item mb-3 d-flex align-items-center">
                            {% if not loop.first %}
                                <button type="button" class="btn btn-sm btn-light-danger me-2 remove-item" title="Удалить">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                                    </svg>
                                </button>
                            {% endif %}
                            {{ form_widget(category.value, {'attr': {'class': 'form-select', 'data-select2': true}}) }}
                        </div>
                    {% endfor %}
                </div>
                <div class="mt-3">
                    <button type="button" class="btn btn-light-primary add-category">Добавить категорию</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">{{ 'page.settings.criteria'|trans }}</h3>
            </div>
            <div class="card-body">
                <div class="collection-criteria" data-prototype="{{ form_widget(form.criteria.vars.prototype)|e('html_attr') }}">
                    {% for criteria in form.criteria %}
                        <div class="collection-item mb-3 d-flex align-items-center">
                            {% if not loop.first %}
                                <button type="button" class="btn btn-sm btn-light-danger me-2 remove-item" title="Удалить">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                                    </svg>
                                </button>
                            {% endif %}
                            {{ form_widget(criteria.text.value, {'attr': {'class': 'form-control', 'placeholder': 'Введите название критерия'}}) }}
                            {{ form_widget(criteria.const) }}
                        </div>
                    {% endfor %}
                </div>
                <div class="mt-3">
                    <button type="button" class="btn btn-light-primary add-criteria">Добавить критерий</button>
                </div>
            </div>
        </div>
    </div>
</div>
