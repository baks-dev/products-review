{% trans_default_domain('products-review.admin') %}

<div class="modal-dialog modal-dialog-centered" style="max-width: 800px;">
    {{ form_start(form) }}
    <div class="modal-content p-3 border-bottom border-5 border-danger">
        <div class="modal-header">

            <h5 class="modal-title">
                {# Заголовок модального окна #}
                Удалить настройку отзывов

            </h5>

            <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                <span class="svg-icon svg-icon-2x"></span>
            </div>
        </div>

        <div class="modal-body">
            <h4>
                {# Вы уверены, что желаете удалить настройку? #}
                {{ 'form.settings.label.delete'|trans }}
            </h4>
        </div>

        <div class="modal-footer">

            <div class="flex-grow-1">
                &nbsp;
            </div>

            {# Отмена #}
            <div class="d-flex gap-3">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                    {{ 'btn.cancel'|trans({}, 'core.btn') }}
                </button>


                {# Удалить #}
                {{ form_widget(form.delete, { label: '
				<span>'~ 'btn.delete'|trans({}, 'core.btn') ~'</span>
				<span class="spinner-border spinner-border-sm vertical-middle d-none"></span>
			'}) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
</div>
